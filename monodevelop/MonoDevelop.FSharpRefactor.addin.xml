<Addin
    namespace = "MonoDevelop"
    id = "FSharpRefactor"
    name = "fsharp-refactor"
    author = "Lewis Brown"
    url = "https://github.com/Lewix/fsharp-refactor"
    description = "Provides bindings for F# refactorings in MonoDevelop"
    category = "IDE extensions"
    version = "0.2">

    <Runtime>
        <Import assembly="FSharp.Refactor.dll" />
        <Import assembly="FSharp.Compiler.dll" />
    </Runtime>

    <Dependencies>
        <Addin id="Ide" version="4.0" />
        <Addin id="Refactoring" version="4.0" />
    </Dependencies>

    <Extension path="/MonoDevelop/Refactoring/Refactorings">
        <Class
            id="MonoDevelop.FSharpRefactor.RenameRefactoring" 
            class="MonoDevelop.FSharpRefactor.RenameRefactoring" />
    </Extension>
    <Extension path="/MonoDevelop/Refactoring/Refactorings">
        <Class
            id="MonoDevelop.FSharpRefactor.AddArgumentRefactoring" 
            class="MonoDevelop.FSharpRefactor.AddArgumentRefactoring" />
    </Extension>
    <Extension path="/MonoDevelop/Refactoring/Refactorings">
        <Class
            id="MonoDevelop.FSharpRefactor.ExtractFunctionRefactoring" 
            class="MonoDevelop.FSharpRefactor.ExtractFunctionRefactoring" />
    </Extension>
</Addin>
